<h1 class="friend_h1">Editing Friend</h1>

<%= render 'form', friend: @friend %>

<div class="col">
    <div class="row">
        <%= link_to 'Show', @friend, class: "show-btn btn btn-outline-warning"  %> 
        <%= link_to 'Back', friends_path, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger ml-1" %>
    </div>
    <div class="row">
        <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-2 d_button" %>
    </div>
</div>
