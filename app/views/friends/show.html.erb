


<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead"><%= @friend.email %> | <%= @friend.phone %> | </p>
  <hr class="my-4">
  <div class="col">
    <div class="row-6">
      <%= link_to 'Edit', edit_friend_path(@friend), class: "show-btn btn btn-outline-warning" %>
      <%= link_to 'Back', friends_path, class: "show-btn btn btn-outline-danger ml-2 " %>
    </div>
    <div class="row-6">
      <%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-2 d_button" %>
    </div>
  </div>
  
  
</div>